<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="8dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <TextView
            android:id="@+id/item_grade_course_name"
            android:layout_width="182dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="24dp"
            android:text="@string/course_name"
            android:textSize="@dimen/txt_medium_size"
            android:textColor="@color/textPrimaryLight"/>


        <TextView
            android:id="@+id/item_grade_course_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="64dp"
            android:layout_alignParentEnd="true"
            android:text="@string/course_score"
            android:textSize="@dimen/txt_medium_big_size"
            android:textColor="@color/textPrimaryLight"/>

        <ImageView
            android:id="@+id/item_grade_isUnfold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="24dp"
            android:layout_alignParentEnd="true"
            android:tint="@color/colorGray"
            android:src="@drawable/ic_unfold_black_24dp"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/item_grade_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="36dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="学年学期"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"/>

            <TextView
                android:id="@+id/item_grade_time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end|center_vertical"
                android:paddingStart="16sp"
                android:paddingEnd="16dp"
                android:textSize="16sp"
                android:text="622626"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="36dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="课程性质"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"/>

            <TextView
                android:id="@+id/item_grade_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end|center_vertical"
                android:paddingStart="16sp"
                android:paddingEnd="16dp"
                android:textSize="16sp"
                android:text="622626"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="36dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开课学院"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"/>

            <TextView
                android:id="@+id/item_grade_college"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end|center_vertical"
                android:paddingStart="16sp"
                android:paddingEnd="16dp"
                android:textSize="16sp"
                android:text="622626"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="36dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="学分"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"/>

            <TextView
                android:id="@+id/item_grade_credits"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end|center_vertical"
                android:paddingStart="16sp"
                android:paddingEnd="16dp"
                android:textSize="16sp"
                android:text="622626"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="36dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="绩点"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"/>

            <TextView
                android:id="@+id/item_grade_gpa"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end|center_vertical"
                android:paddingStart="16sp"
                android:paddingEnd="16dp"
                android:textSize="16sp"
                android:text="622626"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/item_grade_examination_re"
            android:layout_width="match_parent"
            android:layout_height="36dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="补考成绩"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"/>

            <TextView
                android:id="@+id/item_grade_examination"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end|center_vertical"
                android:paddingStart="16sp"
                android:paddingEnd="16dp"
                android:textSize="16sp"
                android:text="622626"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/item_grade_reset"
            android:layout_width="match_parent"
            android:layout_height="36dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="重修"
                android:textColor="@color/colorRed"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"/>

            <TextView
                android:id="@+id/item_grade_reset_txt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end|center_vertical"
                android:paddingStart="16sp"
                android:paddingEnd="16dp"
                android:textSize="16sp"
                android:text="86"
                android:textColor="@color/colorRed"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorBlackGray"/>
    </LinearLayout>

</LinearLayout>
